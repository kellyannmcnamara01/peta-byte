@model PetaByte_KellysFeatures2.Models.EmployeeSchedule

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>EmployeeSchedule</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id)

        @Html.HiddenFor(model => model.Day)

        @Html.HiddenFor(model => model.StartTime)

        @Html.HiddenFor(model => model.BreakTimeBegin)

        @Html.HiddenFor(model => model.BreakTimeend)

        @Html.HiddenFor(model => model.EndTime)

        @Html.HiddenFor(model => model.EmployeeId)

        @Html.HiddenFor(model => model.EmployeeFirstName)

        @Html.HiddenFor(model => model.EmployeeLastName)

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
